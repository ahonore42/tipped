<h1>Sign Up</h1>
<h6 style="max-width: 80%; margin: 20px auto;">Welcome to Tipped, here to help you find all the best cocktail recipes!</h6>

<div class="drinkContainer">

    <div class="row">
        <form class="col s12" method="POST" action="/auth/signup">
            <div class="row">
                <div class="input-field col s4">
                    <input id="first_name" type="text" name="firstname" value="<%= data.firstname %>">
                    <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s4">
                    <input id="last_name" type="text" name="lastname" value="<%= data.lastname %>">
                    <label for="last_name">Last Name</label>
                </div>
            
                <div class="input-field col s4">
                    <input id="email" type="email" name="email" value="<%= data.email %>">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <input id="username" name="username" type="text" value="<%= data.username %>">
                    <label for="username">Username</label>
                </div>
                <div class="input-field col s4">
                    <input id="password" type="password" name="password" value="<%= data.password%>">
                    <label for="password">Password</label>
                </div>
                <div class="input-field col s4">
                    <input id="password_verify" type="password" name="password_verify" value="<%= data.password_verify%>">
                    <label for="password_verify">Verify Password</label>
                </div>
            </div>
            <div class="row" style="color: black;">
                <div class="input-field col s4">
                    <input id="birthday" name="birthday" type="text" class="datepicker" value="<%= data.birthday %>">
                    <label for="birthday">DOB</label>
                </div>
                <div class="input-field col s4">
                    <input id="city" name="city" type="text" value="<%= data.city %>"> 
                    <label for="city">City</label>
                </div>
                <div class="input-field col s4">
                    <input id="bar" type="text" name="bar" value="<%= data.bar %>">
                    <label for="bar">Bars You Worked At</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="pic" type="url" name="pic" value="<%= data.pic %>">
                    <label for="pic">Picture URL</label>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="cover" type="url" name="cover" value="<%= data.cover %>">
                    <label for="cover">Cover Picture URL</label>
            </div>
            </div>
            <div class="row">
                <div class="col s1"></div>
                <div class="input-field col s10" >
                    <textarea id="bio" name="bio" class="materialize-textarea white-text"><%= data.bio %></textarea>
                    <label for="bio">A Little Bit About Yourself</label>
                </div>
                <div class="col s1"></div>
            </div>
            <button class="btn waves-effect cyan darken-3">Sign Up
                <i class="material-icons right">send</i>
            </button>
            
        </form>
    </div>
</div>