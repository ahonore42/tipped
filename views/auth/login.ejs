<h1>Login</h1>
<h6 style="max-width: 80%; margin: 20px auto;">Welcome back!</h6>
<div class="drinkContainer">

  <div class="row">
      <form class="col s12" method="POST" action="/auth/login">
        <div class="row">
          <div class="input-field col s6">
            <input placeholder="Your Email" id="email" type="text" name="email">
            <label for="email">Email</label>
          </div>
          <div class="input-field col s6">
            <input id="password" type="password" name="password">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
            <div class="col s12">
              <button class="btn waves-effect waves-light cyan darken-3" type="submit">Submit
                  <i class="material-icons right">send</i>
              </button>
            </div>
        </div>
      </form>
  </div> 
</div>